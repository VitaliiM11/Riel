@model IEnumerable<Property>
@{
    ViewData["Title"] = "Сторінка адміністратора";
}

<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Управління Нерухомістю</title>

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', Arial, sans-serif;
            background-color: #f3f4f6;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin-bottom: 60px;
            
        }

        .admin-title {
            text-align: center;
            font-size: 3rem;
            font-weight: 700;
            color: #ff5722;
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .btn-primary {
            background-color: #ff5722;
            color: #fff;
            font-size: 1rem;
            font-weight: 500;
            padding: 10px 25px;
            border-radius: 30px;
            text-transform: uppercase;
            border: none;
            transition: all 0.3s ease-in-out;
        }

            .btn-primary:hover {
                background-color: #e64a19;
                transform: translateY(-2px);
            }

        .table th, .table td {
            padding: 20px;
            text-align: left;
            vertical-align: middle;
            border-top: 1px solid #ddd;
        }

        .table th {
            background-color: #fff;
            color: #5f6368;
            text-transform: uppercase;
            font-weight: 600;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #ffffff;
        }

        .table-striped tbody tr:nth-of-type(even) {
            background-color: #f9fafb;
        }

        .table-responsive {
            margin-top: 30px;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        }

        .card-header {
            background-color: #ff5722;
            color: #fff;
            font-size: 1.25rem;
            font-weight: 700;
            padding: 15px 20px;
            border-radius: 12px 12px 0 0;
        }

        .card-body {
            background-color: #fff;
            border-radius: 0 0 12px 12px;
            padding: 10px;
        }

        .alert-info {
            background-color: #d1ecf1;
            color: #0c5460;
            padding: 20px;
            border-radius: 8px;
            font-size: 1rem;
            margin-top: 20px;
        }

        .icon-btn {
            background: none;
            border: none;
            padding: 8px;
            cursor: pointer;
            transition: transform 0.3s ease;
        }

            .icon-btn:hover {
                transform: translateY(-2px);
            }

        .icon-edit {
            color: #ff9800;
            font-size: 1.5rem;
        }

        .icon-delete {
            color: #dc3545;
            font-size: 1.5rem;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="admin-title">
            <h1>Управління Нерухомістю</h1>
        </div>

        <div class="text-right mb-3">
            <a href="@Url.Action("Add", "Admin")" class="btn btn-primary">Додати нову нерухомість</a>
        </div>

        @if (Model.Any())
        {
            <div class="card">
                <div class="card-header">Список нерухомості</div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Назва</th>
                                    <th>Тип</th>
                                    <th>Опис</th>
                                    <th>Ціна</th>
                                    <th>Місто</th>
                                    <th>Дії</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var property in Model)
                                {
                                    <tr>
                                        <td>@property.Name</td>
                                        <td>@property.CategoryName</td>
                                        <td>@property.Description</td>
                                        <td>@property.Price</td>
                                        <td>@property.Location</td>
                                        <td>
                                            <form method="post" action="@Url.Action("Delete", "Admin", new { id = property.ID })" style="display: inline;">
                                                <a href="@Url.Action("Edit", "Admin", new { id = property.ID })" class="icon-btn">
                                                    <i class="fa fa-pencil icon-edit" aria-hidden="true"></i>
                                                </a>
                                                <button type="submit" class="icon-btn" onclick="return confirm('Ви впевнені, що хочете видалити цей об’єкт?');">
                                                    <i class="fa fa-trash icon-delete" aria-hidden="true"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Немає жодної нерухомості в списку.
            </div>
        }
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
