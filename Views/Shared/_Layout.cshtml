<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Riel Company</title>

    <!-- Link Bootstrap or any other CSS libraries if needed -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98..." crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Include Bootstrap 4 CDN to keep the design consistent -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-MCw98..." crossorigin="anonymous">

    <!-- Ensure this is the only instance of Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Avoid redundancy, use a single version of Bootstrap -->

    <style>
        /* Global styles */
        body {
            background-color: #f0f4f8; /* Set a custom background color */
            font-family: Arial, sans-serif;
            color: #333; /* Default text color */
        }

        .container {
            padding-top: 20px;
        }

        /* Additional global styling */
        .navbar {
            background-color: #333;
            color: #fff;
        }

        .navbar-nav li {
            margin-right: 30px; /* Adjust the value as needed */
        }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 20px 0;
            text-align: center;
            height: 50px; /* Set footer height */
            display: flex;
            align-items: center; /* Center vertically */
            justify-content: center; /* Center horizontally */
        }
    </style>

    @* Link your custom CSS file if you prefer to use an external stylesheet *@
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="font-size: 22px !important">
        <a class="navbar-brand" href="/">Riel Company</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Головна</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Catalog">Каталог</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Про нас</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Контакти</a></li>
                <li class="nav-item">
                    <a asp-controller="User" asp-action="SignIn" class="nav-link icons-btn d-inline-block bag">
                        <i class="fa fa-user" aria-hidden="true"></i>

                    </a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; @DateTime.Now.Year - Riel Company</p>
    </footer>

    <!-- JavaScript (Bootstrap, jQuery) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

